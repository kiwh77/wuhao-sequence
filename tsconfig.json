{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "declaration": true,
    "declarationDir": "./dist/types/",
    "declarationMap": false,
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es5",
    "baseUrl": "./",
    "types": [
      "node",
    ],
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [
      "ES2015"
    ],
    "allowJs": true,
    "paths": {
      "tslib": [
        "./node_modules/tslib/tslib.d.ts"
      ]
    },
  },
  "include": [
    "src/**/*.ts",
    "@types/jest",
  ],
  "exclude": [
    "node_modules",
    "example",
    "tests/**/*.test.ts"
  ]
}